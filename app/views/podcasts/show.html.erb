<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
			<h1><%= @podcast.title %></h1>
			<p class="description"><%= @podcast.description %></p>
			<% unless @podcast.itunes.blank? %>	
				<a href="<%= @podcast.itunes %>" class="suscribe_link">Itunes</a>
			<% end %>
			<% unless @podcast.soundcloud.blank? %>	
				<a href="<%= @podcast.soundcloud %>" class="suscribe_link">SounCloud</a>
			<% end %>
			
		</div>
	</div>
	<div id="breadcrumb">
		<%= link_to podcasts_path do %>
			All Podcast
			<span>/</span>
			The RocketShip Podcast
		<% end %>

	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @episodes.each do |episode| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<a href="#">
								<%= image_tag("home.jpg") %>
							</a>
						</div>
						<div class="episode_overview">
							<h2><%= link_to episode.title, podcast_episode_path(@podcast, episode) %></h2>
							<p class="description">
								<%= truncate(episode.description, length: 130) %>  <!-- metodo truncate para solo mostrar la cantidad de letras en una descripcion  -->
							</p>
						</div>
					</li>
				<% end %>
			</ul>


		</div>
	</div>
</div>


<div class="pagination">	
	<span class="previous_page disabled"> Previous</span>
	<em class="current">1</em>
	<a href="#">2</a>
	<a href="#" class="next_page">Next</a>
</div>


