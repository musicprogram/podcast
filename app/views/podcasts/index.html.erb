<div id="banner" class="podcast_banner">
	<h1>Descubre tu nuevo artista favorito</h1>
</div>

<div id="podcast" class="cf">
	<div class="wrapper">
		<ul>
		<% @podcasts.each do |podcast| %>
			<%= link_to podcast do %>
				<li>	
					<%= image_tag("home_1.jpg") %>
					<div class="podcast_overview">
						<h2><%= podcast.title %></h2>
						<p class="episode_count">1 Episodio</p>
					</div>
				</li>
			<% end %>
		<% end %>	
		</ul>
	
	</div>
</div>



<div class="pagination">	
	<span class="previous_page disabled"> Previous</span>
	<em class="current">1</em>
	<a href="#">2</a>
	<a href="#" class="next_page">Next</a>
</div>