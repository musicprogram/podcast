<% @edita = true %>

<div id="podcast_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>The RocketShip Podcast Dashboard</h1>
      
    </div>
  </div>
  <div id="links_1">
    <div class="wrapper_skinny">
      <ul>
        <li>Episodes</li>
        <li><%= link_to "New Episode", new_podcast_episode_path(@podcast) %></li>
        <li><%= link_to "Account settings", edit_podcast_registration_path , class: 'current'%></li>
        <li><%= link_to "View Podcast", podcast_path(current_podcast) %> </li>

      </ul>
    </div>
  </div>
</div>



<div id="form">
  
<div class="wrapper_skinny">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :title , class:'blanco' %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description , class:'blanco' %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :thumbnail , class:'blanco' %><br />
    <%= f.file_field :thumbnail %>
  </div>  

  <div class="field">
    <%= f.label :email , class:'blanco' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <h2>links</h2>
  
  <div class="field">
    <%= f.label :itunes , class:'blanco' %><br />
    <%= f.text_field :itunes %>
  </div>

  <div class="field">
    <%= f.label :soundcloud , class:'blanco' %><br />
    <%= f.text_field :soundcloud %>
  </div>

  <div class="field">
    <%= f.label :password , class:'blanco' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation , class:'blanco' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password , class:'blanco' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" ,  class:'button button_highlight button_block'%>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


</div>
</div>

